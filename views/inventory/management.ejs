<main class="container management-view">
  <h1><%= title %></h1>
  
  <% if (messages.success) { %>
    <div class="alert alert-success">
      <%= messages.success %>
    </div>
  <% } %>
  
  <% if (messages.error) { %>
    <div class="alert alert-danger">
      <%= messages.error %>
    </div>
  <% } %>

  <div class="management-actions">
    <a href="/inv/add-classification" class="btn btn-primary btn-lg">
      <i class="fas fa-plus-circle"></i> Add New Classification
    </a>
    <a href="/inv/add-inventory" class="btn btn-primary btn-lg">
      <i class="fas fa-car"></i> Add New Inventory
    </a>
  </div>
</main>