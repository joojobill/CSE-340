<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | CSE Motors</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/navigation') %>

  <main class="form-container">
    <h1><%= title %></h1>
    
    <% if (messages.error) { %>
      <div class="alert alert-danger">
        <%= messages.error %>
      </div>
    <% } %>

    <form action="/inv/add-inventory" method="post">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inv_make">Make:</label>
          <input 
            type="text" 
            name="inv_make" 
            id="inv_make" 
            class="form-control <%= errors && errors.find(e => e.param === 'inv_make') ? 'is-invalid' : '' %>"
            value="<%= formData.inv_make %>"
            required
          >
          <% if (errors) { %>
            <% const error = errors.find(e => e.param === 'inv_make') %>
            <% if (error) { %>
              <div class="invalid-feedback">
                <%= error.msg %>
              </div>
            <% } %>
          <% } %>
        </div>

        <div class="form-group col-md-6">
          <label for="inv_model">Model:</label>
          <input 
            type="text" 
            name="inv_model" 
            id="inv_model" 
            class="form-control <%= errors && errors.find(e => e.param === 'inv_model') ? 'is-invalid' : '' %>"
            value="<%= formData.inv_model %>"
            required
          >
          <% if (errors) { %>
            <% const error = errors.find(e => e.param === 'inv_model') %>
            <% if (error) { %>
              <div class="invalid-feedback">
                <%= error.msg %>
              </div>
            <% } %>
          <% } %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="inv_year">Year:</label>
          <input 
            type="number" 
            name="inv_year" 
            id="inv_year" 
            class="form-control <%= errors && errors.find(e => e.param === 'inv_year') ? 'is-invalid' : '' %>"
            value="<%= formData.inv_year %>"
            min="1900"
            max="<%= new Date().getFullYear() + 1 %>"
            required
          >
          <% if (errors) { %>
            <% const error = errors.find(e => e.param === 'inv_year') %>
            <% if (error) { %>
              <div class="invalid-feedback">
                <%= error.msg %>
              </div>
            <% } %>
          <% } %>
        </div>

        <div class="form-group col-md-4">
          <label for="inv_price">Price:</label>
          <input 
            type="number" 
            name="inv_price" 
            id="inv_price" 
            class="form-control <%= errors && errors.find(e => e.param === 'inv_price') ? 'is-invalid' : '' %>"
            value="<%= formData.inv_price %>"
            step="0.01"
            min="0"
            required
          >
          <% if (errors) { %>
            <% const error = errors.find(e => e.param === 'inv_price') %>
            <% if (error) { %>
              <div class="invalid-feedback">
                <%= error.msg %>
              </div>
            <% } %>
          <% } %>
        </div>

        <div class="form-group col-md-4">
          <label for="inv_miles">Mileage:</label>
          <input 
            type="number" 
            name="inv_miles" 
            id="inv_miles" 
            class="form-control <%= errors && errors.find(e => e.param === 'inv_miles') ? 'is-invalid' : '' %>"
            value="<%= formData.inv_miles %>"
            min="0"
            required
          >
          <% if (errors) { %>
            <% const error = errors.find(e => e.param === 'inv_miles') %>
            <% if (error) { %>
              <div class="invalid-feedback">
                <%= error.msg %>
              </div>
            <% } %>
          <% } %>
        </div>
      </div>

      <div class="form-group">
        <label for="inv_description">Description:</label>
        <textarea 
          name="inv_description" 
          id="inv_description" 
          class="form-control <%= errors && errors.find(e => e.param === 'inv_description') ? 'is-invalid' : '' %>"
          rows="3"
          required
        ><%= formData.inv_description %></textarea>
        <% if (errors) { %>
          <% const error = errors.find(e => e.param === 'inv_description') %>
          <% if (error) { %>
            <div class="invalid-feedback">
              <%= error.msg %>
            </div>
          <% } %>
        <% } %>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inv_image">Image Path:</label>
          <input 
            type="text" 
            name="inv_image" 
            id="inv_image" 
            class="form-control <%= errors && errors.find(e => e.param === 'inv_image') ? 'is-invalid' : '' %>"
            value="<%= formData.inv_image %>"
            required
          >
          <% if (errors) { %>
            <% const error = errors.find(e => e.param === 'inv_image') %>
            <% if (error) { %>
              <div class="invalid-feedback">
                <%= error.msg %>
              </div>
            <% } %>
          <% } %>
        </div>

        <div class="form-group col-md-6">
          <label for="inv_thumbnail">Thumbnail Path:</label>
          <input 
            type="text" 
            name="inv_thumbnail" 
            id="inv_thumbnail" 
            class="form-control <%= errors && errors.find(e => e.param === 'inv_thumbnail') ? 'is-invalid' : '' %>"
            value="<%= formData.inv_thumbnail %>"
            required
          >
          <% if (errors) { %>
            <% const error = errors.find(e => e.param === 'inv_thumbnail') %>
            <% if (error) { %>
              <div class="invalid-feedback">
                <%= error.msg %>
              </div>
            <% } %>
          <% } %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inv_color">Color:</label>
          <input 
            type="text" 
            name="inv_color" 
            id="inv_color" 
            class="form-control <%= errors && errors.find(e => e.param === 'inv_color') ? 'is-invalid' : '' %>"
            value="<%= formData.inv_color %>"
            required
          >
          <% if (errors) { %>
            <% const error = errors.find(e => e.param === 'inv_color') %>
            <% if (error) { %>
              <div class="invalid-feedback">
                <%= error.msg %>
              </div>
            <% } %>
          <% } %>
        </div>

        <div class="form-group col-md-6">
          <label for="classification_id">Classification:</label>
          <%- classificationList %>
          <% if (errors) { %>
            <% const error = errors.find(e => e.param === 'classification_id') %>
            <% if (error) { %>
              <div class="invalid-feedback d-block">
                <%= error.msg %>
              </div>
            <% } %>
          <% } %>
        </div>
      </div>

      <button type="submit" class="btn btn-primary">Add Inventory</button>
    </form>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>