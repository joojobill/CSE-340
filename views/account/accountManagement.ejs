<main class="container management-view">
    <h1><%= title %></h1>
    
    <% if (messages.success) { %>
      <div class="alert alert-success">
        <%= messages.success %>
      </div>
    <% } %>
    
    <% if (messages.error) { %>
      <div class="alert alert-danger">
        <%= messages.error %>
      </div>
    <% } %>
  
    <h2>Welcome <%= user.account_firstname %></h2>
    
    <div class="account-actions">
      <a href="/account/update/<%= user.account_id %>" class="btn btn-primary">
        Update Account Information
      </a>
    </div>
  
    <% if (user.account_type === 'Employee' || user.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <div class="management-actions">
        <a href="/inv/add-classification" class="btn btn-primary btn-lg">
          <i class="fas fa-plus-circle"></i> Add New Classification
        </a>
        <a href="/inv/add-inventory" class="btn btn-primary btn-lg">
          <i class="fas fa-car"></i> Add New Inventory
        </a>
      </div>
      <div class="account-actions">
        <a href="/account/update/<%= user.account_id %>" class="btn btn-primary">
          Update Account Information
        </a>
        <a href="/wishlist/" class="btn btn-secondary">
          View My Wishlist
        </a>
      </div>
    <% } %>
  </main>